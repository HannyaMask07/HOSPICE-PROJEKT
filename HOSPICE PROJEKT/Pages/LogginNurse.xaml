<Page x:Class="HOSPICE_PROJEKT.Pages.LogginNurse"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HOSPICE_PROJEKT.Pages"
      xmlns:n ="clr-namespace:HOSPICE_PROJEKT"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LogginNurse">
    
    <Grid Background="AntiqueWhite">
        <Image Margin="252,10,252,162" Source="/Images/Nurse.png" Stretch="Uniform"/>
        <Grid Margin="3,260,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Label Content="Login:" HorizontalAlignment="Left" Margin="308,145,0,0"/>
            <TextBox Name="LoginTextBox" Margin="346,150,347,10"/>
        </Grid>
        <Grid Margin="3,260,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Label Content="Password:" HorizontalAlignment="Left" Margin="288,175,0,0"/>

            <PasswordBox Name="PasswordTextBox" Margin="346,180,347,10"/>
        </Grid>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Click="SearchButton_Click" Margin="405,468,0,0" VerticalAlignment="Top" Height="23" Width="48" >

        </Button>
    </Grid>
</Page>
